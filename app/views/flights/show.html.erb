<h1><%= @flight.number %></h1>
<%= @flight.date %><br>
<%= @flight.time %><br>
<%= @flight.departure_city %><br>
<%= @flight.arrival_city %><br>
<%= @flight.airline.name %>
<% @flight.passengers.each do |passenger| %>
  <section id="passenger-<%= passenger.id %>">
    <%= passenger.name %><br>
    <%= passenger.age %>
  </section>
<% end %>

<h3>Minors: @flight.passengers.minors</h3>

<h3>Adults: @flight.passengers.adults</h3>
